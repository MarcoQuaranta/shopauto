generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id           String   @id @default(cuid())
  name         String?
  shop         String   @unique
  accessToken  String
  scope        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  products     Product[]

  @@index([shop])
}

model Product {
  id               String   @id @default(cuid())
  shopifyProductId String
  shopId           String
  shop             Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  title            String
  handle           String?
  price            Float?
  sku              String?
  templateSuffix   String   @default("landing")

  // Metafields data stored as JSON
  metafields       Json?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([shopId])
  @@index([shopifyProductId])
}

model Template {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique

  // JSON structure of the template
  structure   Json

  // Liquid sections data
  sections    Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}
