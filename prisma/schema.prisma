generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id             String    @id @default(cuid())
  name           String?
  shop           String    @unique
  accessToken    String
  scope          String?

  // Client credentials for token refresh
  clientId       String?
  clientSecret   String?
  tokenExpiresAt DateTime?

  // Gemini API key (optional per-shop)
  geminiApiKey   String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  products       Product[]
  metafieldCache MetafieldDefinitionCache[]

  @@index([shop])
}

model Product {
  id               String   @id @default(cuid())
  shopifyProductId String
  shopId           String
  shop             Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  title            String
  handle           String?
  price            Float?
  sku              String?
  templateSuffix   String   @default("landing")

  // Metafields data stored as JSON
  metafields       Json?

  // Variants and images tracking
  variantsCount       Int      @default(1)
  imagesCount         Int      @default(0)
  hasMultipleVariants Boolean  @default(false)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([shopId])
  @@index([shopifyProductId])
}

model Template {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique

  // JSON structure of the template
  structure   Json

  // Liquid sections data
  sections    Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

// Cache metafield definitions from shop
model MetafieldDefinitionCache {
  id          String   @id @default(cuid())
  shopId      String
  shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  namespace   String
  key         String
  name        String
  type        String   // single_line_text_field, number_integer, url, json, etc.
  description String?
  validations Json?    // Store validation rules as JSON

  cachedAt    DateTime @default(now())

  @@unique([shopId, namespace, key])
  @@index([shopId])
}
