<div class="landing-cta">
  <div class="cta-container">
    {% if product.metafields.landing.cta_title %}
      <h2 class="cta-title">{{ product.metafields.landing.cta_title }}</h2>
    {% endif %}

    {% if product.metafields.landing.cta_text %}
      <p class="cta-text">{{ product.metafields.landing.cta_text }}</p>
    {% endif %}

    <div class="cta-buttons">
      <form action="/cart/add" method="post" class="add-to-cart-form">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="btn-primary">
          {% if product.metafields.landing.cta_button_text %}
            {{ product.metafields.landing.cta_button_text }}
          {% else %}
            Add to Cart - {{ product.price | money }}
          {% endif %}
        </button>
      </form>

      {% if product.metafields.landing.cta_secondary_button %}
        <a href="{{ product.metafields.landing.cta_secondary_link | default: '#' }}" class="btn-secondary">
          {{ product.metafields.landing.cta_secondary_button }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .landing-cta {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 80px 40px;
    text-align: center;
  }

  .cta-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 42px;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 20px;
  }

  .cta-text {
    font-size: 20px;
    color: #ffffff;
    margin-bottom: 40px;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
  }

  .btn-primary {
    background: #ffffff;
    color: #667eea;
    padding: 16px 40px;
    font-size: 18px;
    font-weight: 600;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: transform 0.2s;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  .btn-secondary {
    color: #ffffff;
    padding: 16px 40px;
    font-size: 18px;
    font-weight: 600;
    border: 2px solid #ffffff;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.2s;
    display: inline-block;
  }

  .btn-secondary:hover {
    background: #ffffff;
    color: #667eea;
  }

  @media (max-width: 768px) {
    .cta-buttons {
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Landing CTA",
  "settings": [
    {
      "type": "text",
      "id": "cta_title",
      "label": "CTA Title"
    },
    {
      "type": "textarea",
      "id": "cta_text",
      "label": "CTA Text"
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "Primary Button Text",
      "default": "Add to Cart"
    },
    {
      "type": "text",
      "id": "cta_secondary_button",
      "label": "Secondary Button Text"
    },
    {
      "type": "url",
      "id": "cta_secondary_link",
      "label": "Secondary Button Link"
    }
  ]
}
{% endschema %}
