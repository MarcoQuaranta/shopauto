<div class="landing-hero-section">

  {%- comment -%} SCARCITY BAR {%- endcomment -%}
  {% if product.metafields.landing.scarcity_text %}
    <div class="scarcity-bar">{{ product.metafields.landing.scarcity_text }}</div>
  {% else %}
    <div class="scarcity-bar">Ultime unità disponibili</div>
  {% endif %}

  {%- comment -%} HERO SECTION {%- endcomment -%}
  <div class="hero-section">
    <div class="lp-width hero-grid">

      <div class="hero-img">
        {% if product.metafields.landing.hero_image %}
          <img src="{{ product.metafields.landing.hero_image }}" alt="{{ product.title }}">
        {% else %}
          <img src="{{ product.featured_image | img_url: '1000x' }}" alt="{{ product.title }}">
        {% endif %}
      </div>

      <div>
        {% if product.metafields.landing.hero_overtitle %}
          <p class="lp-overtitle">{{ product.metafields.landing.hero_overtitle }}</p>
        {% endif %}

        {% if product.metafields.landing.hero_title %}
          <h1 class="lp-title">{{ product.metafields.landing.hero_title }}</h1>
        {% else %}
          <h1 class="lp-title">{{ product.title }}</h1>
        {% endif %}

        {% if product.metafields.landing.hero_subtitle %}
          <div class="lp-subtitle">{{ product.metafields.landing.hero_subtitle }}</div>
        {% else %}
          <p class="lp-subtitle">Eleganza senza tempo.</p>
        {% endif %}

        <div class="price-box">
          <div class="price-row">
            <span class="price-display">{{ product.price | money }}</span>
            {% if product.compare_at_price_max > product.price %}
              <span class="strike">{{ product.compare_at_price_max | money }}</span>
            {% endif %}
          </div>

          {%- comment -%} QUANTITY SELECTOR {%- endcomment -%}
          <div class="qty-wrapper">
            <span class="qty-label">Quantità</span>
            <div class="qty-controls">
              <button type="button" class="qty-btn" onclick="changeQty(-1)">−</button>
              <input type="number" id="hero-qty" class="qty-input" value="1" min="1" readonly>
              <button type="button" class="qty-btn" onclick="changeQty(1)">+</button>
            </div>
          </div>

          {%- comment -%} KLARNA BOX {%- endcomment -%}
          <div class="klarna-box">
            <span class="klarna-text">Paga in 3 rate da <strong>{{ product.price | divided_by: 3 | money }}</strong> con Klarna</span>
          </div>

          <button onclick="buyNowHero()" class="cta-button">
            {% if product.metafields.landing.cta_button_text %}
              {{ product.metafields.landing.cta_button_text }}
            {% else %}
              ORDINA ORA
            {% endif %}
          </button>

          <p class="shipping-note">Spedizione gratuita oggi</p>
        </div>

      </div>
    </div>
  </div>

  {%- comment -%} TRUST BADGES {%- endcomment -%}
  <div class="trust-badges lp-width">
    <div class="trust-item">
      <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
      </svg>
      <span>{% if product.metafields.landing.icon1_text %}{{ product.metafields.landing.icon1_text }}{% else %}Qualità Garantita{% endif %}</span>
    </div>
    <div class="trust-divider"></div>
    <div class="trust-item">
      <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>{% if product.metafields.landing.icon2_text %}{{ product.metafields.landing.icon2_text }}{% else %}Garanzia 2 Anni{% endif %}</span>
    </div>
    <div class="trust-divider"></div>
    <div class="trust-item">
      <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
      </svg>
      <span>{% if product.metafields.landing.icon3_text %}{{ product.metafields.landing.icon3_text }}{% else %}Pagamento Sicuro{% endif %}</span>
    </div>
  </div>

  {%- comment -%} STICKY CTA {%- endcomment -%}
  <div class="sticky-cta">
    <div class="sticky-content">
      <div class="sticky-info">
        <span class="sticky-price">{{ product.price | money }}</span>
        <span class="sticky-klarna">o 3 rate da {{ product.price | divided_by: 3 | money }} con Klarna</span>
      </div>
      <button onclick="buyNowHero()" class="sticky-button">
        {% if product.metafields.landing.sticky_cta_text %}
          {{ product.metafields.landing.sticky_cta_text }}
        {% else %}
          ACQUISTA ORA
        {% endif %}
      </button>
    </div>
  </div>

</div>

<style>
  .landing-hero-section * { margin: 0; padding: 0; box-sizing: border-box; }
  .landing-hero-section {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }
  .landing-hero-section .lp-width { max-width: 1000px; margin: 0 auto; padding: 0 20px; }

  .landing-hero-section .scarcity-bar {
    background-color: #0d1b2a;
    color: #fff;
    text-align: center;
    padding: 12px;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .landing-hero-section .hero-section {
    padding: 60px 0 80px 0;
    background: linear-gradient(to bottom, #f4f6f8, #ffffff);
  }

  .landing-hero-section .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: flex-start;
  }

  .landing-hero-section .hero-img img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.08);
    display: block;
  }

  .landing-hero-section .lp-overtitle {
    font-size: 12px;
    font-weight: 500;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 12px;
  }

  .landing-hero-section h1.lp-title {
    font-size: 2.6rem;
    line-height: 1.1;
    margin-bottom: 16px;
    color: #000;
    font-weight: 700;
    letter-spacing: -1px;
  }

  .landing-hero-section p.lp-subtitle,
  .landing-hero-section div.lp-subtitle {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 30px;
    line-height: 1.5;
  }

  .landing-hero-section div.lp-subtitle p {
    margin: 0 0 8px 0;
  }

  .landing-hero-section div.lp-subtitle strong {
    font-weight: 600;
    color: #333;
  }

  .landing-hero-section div.lp-subtitle em {
    font-style: italic;
  }

  .landing-hero-section .price-box {
    background: #fff;
    padding: 30px;
    border: 1px solid #eee;
    border-radius: 12px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
  }

  .landing-hero-section .price-row {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 20px;
  }

  .landing-hero-section .strike {
    text-decoration: line-through;
    opacity: 0.5;
    font-size: 1rem;
    margin-left: 12px;
    font-weight: 400;
  }

  .landing-hero-section .price-display {
    font-size: 2.8rem;
    font-weight: 800;
    color: #000;
    letter-spacing: -1px;
    line-height: 1;
  }

  /* QUANTITY SELECTOR */
  .landing-hero-section .qty-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background: #f8f8f8;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .landing-hero-section .qty-label {
    font-size: 13px;
    font-weight: 600;
    color: #333;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .landing-hero-section .qty-controls {
    display: flex;
    align-items: center;
    gap: 0;
    border: 1px solid #ddd;
    border-radius: 6px;
    overflow: hidden;
  }

  .landing-hero-section .qty-btn {
    width: 40px;
    height: 40px;
    background: #fff;
    border: none;
    font-size: 18px;
    cursor: pointer;
    color: #333;
    transition: background 0.2s;
  }

  .landing-hero-section .qty-btn:hover {
    background: #f0f0f0;
  }

  .landing-hero-section .qty-input {
    width: 50px;
    height: 40px;
    text-align: center;
    border: none;
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
    font-size: 16px;
    font-weight: 600;
    background: #fff;
  }

  /* KLARNA BOX */
  .landing-hero-section .klarna-box {
    background: #ffb3c7;
    border: 1px solid #ff99b3;
    border-radius: 8px;
    padding: 14px;
    text-align: center;
    margin-bottom: 16px;
  }

  .landing-hero-section .klarna-text {
    font-size: 14px;
    color: #1a1a1a;
  }

  .landing-hero-section .klarna-text strong {
    font-weight: 700;
  }

  .landing-hero-section .cta-button {
    display: block;
    width: 100%;
    background-color: #000;
    color: #fff;
    font-size: 1.1rem;
    font-weight: 700;
    text-align: center;
    padding: 20px;
    border-radius: 8px;
    text-decoration: none;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    transition: all 0.3s;
  }

  .landing-hero-section .cta-button:hover {
    background-color: #333;
  }

  .landing-hero-section .shipping-note {
    text-align: center;
    font-size: 13px;
    color: #666;
    margin-top: 12px;
  }

  /* TRUST BADGES */
  .landing-hero-section .trust-badges {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    padding: 35px 20px;
    background: transparent;
  }

  .landing-hero-section .trust-item {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .landing-hero-section .trust-icon {
    width: 20px;
    height: 20px;
    stroke: #666;
  }

  .landing-hero-section .trust-item span {
    font-size: 13px;
    font-weight: 500;
    color: #555;
    letter-spacing: 0.02em;
  }

  .landing-hero-section .trust-divider {
    width: 1px;
    height: 20px;
    background: #ddd;
  }

  /* STICKY CTA */
  .landing-hero-section .sticky-cta {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    padding: 16px 20px;
    box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
    z-index: 2147483647;
    border-top: 1px solid #eee;
    transition: opacity 0.3s ease;
  }

  .landing-hero-section .sticky-content {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .landing-hero-section .sticky-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .landing-hero-section .sticky-price {
    font-size: 1.4rem;
    font-weight: 700;
    color: #000;
  }

  .landing-hero-section .sticky-klarna {
    font-size: 12px;
    color: #666;
  }

  .landing-hero-section .sticky-button {
    background: #000;
    color: #fff;
    padding: 14px 32px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.2s;
  }

  .landing-hero-section .sticky-button:hover {
    background: #333;
  }

  @media (max-width: 768px) {
    .landing-hero-section .hero-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    .landing-hero-section h1.lp-title {
      font-size: 1.8rem;
    }
    .landing-hero-section .trust-badges {
      flex-direction: column;
      gap: 20px;
    }
    .landing-hero-section .trust-divider {
      display: none;
    }
    .landing-hero-section .sticky-content {
      flex-direction: column;
      gap: 12px;
    }
    .landing-hero-section .sticky-button {
      width: 100%;
    }
    .landing-hero-section .sticky-info {
      align-items: center;
    }
  }
</style>

<script>
  var heroQty = 1;

  function changeQty(delta) {
    heroQty = Math.max(1, heroQty + delta);
    document.getElementById('hero-qty').value = heroQty;
  }

  function buyNowHero() {
    var variantId = {{ product.selected_or_first_available_variant.id }};
    var qty = parseInt(document.getElementById('hero-qty').value) || 1;
    fetch('/cart/clear.js', { method: 'POST' })
    .then(function() {
      return fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ items: [{ id: variantId, quantity: qty }] })
      });
    })
    .then(function() { window.location.href = '/checkout'; });
  }

  // Hide sticky CTA when at bottom of page
  (function() {
    var stickyCta = document.querySelector('.landing-hero-section .sticky-cta');
    if (!stickyCta) return;

    function checkScroll() {
      var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      var windowHeight = window.innerHeight;
      var docHeight = document.documentElement.scrollHeight;
      var distanceFromBottom = docHeight - scrollTop - windowHeight;

      if (distanceFromBottom < 100) {
        stickyCta.style.opacity = '0';
        stickyCta.style.pointerEvents = 'none';
      } else {
        stickyCta.style.opacity = '1';
        stickyCta.style.pointerEvents = 'auto';
      }
    }

    window.addEventListener('scroll', checkScroll);
    checkScroll();
  })();
</script>

